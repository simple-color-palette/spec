{
	"$id": "https://simplecolorpalette.com/schema/0.1/schema.json",
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"title": "Simple Color Palette",
	"description": "A minimal JSON-based format for defining color palettes",
	"$comment": "File extension: .color-palette",
	"type": "object",
	"additionalProperties": false,
	"required": [
		"colors"
	],
	"properties": {
		"name": {
			"type": "string",
			"description": "Optional palette name; if omitted, use filename without extension",
			"minLength": 1
		},
		"colors": {
			"type": "array",
			"description": "Ordered list of colors; order must be preserved",
			"minItems": 1,
			"items": {
				"type": "object",
				"additionalProperties": false,
				"required": [
					"components"
				],
				"properties": {
					"name": {
						"type": "string",
						"description": "Optional color name",
						"minLength": 1
					},
					"components": {
						"type": "array",
						"$comment": "Values defined at 1e-5 resolution; round (nearest-even) then clamp opacity",
						"description": "RGB(A) in extended linear sRGB (D65). Values may be <0 or >1. Opacity clamped to [0,1] after rounding.",
						"minItems": 3,
						"maxItems": 4,
						"items": false,
						"prefixItems": [
							{
								"type": "number",
								"title": "red",
								"description": "Red component (extended-range)"
							},
							{
								"type": "number",
								"title": "green",
								"description": "Green component (extended-range)"
							},
							{
								"type": "number",
								"title": "blue",
								"description": "Blue component (extended-range)"
							},
							{
								"type": "number",
								"title": "opacity",
								"default": 1,
								"description": "Opacity (defaults to 1 if omitted, clamped to [0,1] by readers)"
							}
						],
						"examples": [
							[1, 0.1274, 0.418],
							[0.592, 0.278, 0.996, 0.9],
							[-0.2, 1.5, 2.0],
							[0.5, 0.5, 0.5, 1.2]
						]
					}
				}
			},
			"examples": [
				[
					{
						"name": "Hot Pink",
						"components": [1, 0.1274, 0.418]
					},
					{
						"components": [0.592, 0.278, 0.996, 0.9]
					}
				]
			]
		}
	},
	"examples": [
		{
			"name": "Favorites",
			"colors": [
				{
					"name": "Hot Pink",
					"components": [1, 0.1274, 0.418]
				},
				{
					"components": [0.592, 0.278, 0.996, 0.9]
				}
			]
		}
	]
}
